<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.kakawin.DetailKakawinAdminActivity">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:visibility="visible"
        android:id="@+id/shimmerDetailKakawinAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <include
            layout="@layout/shimmer_detail_pupuh"/>
    </com.facebook.shimmer.ShimmerFrameLayout>
    <ScrollView
        android:id="@+id/scrollDetailKakawinAdmin"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewParent"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/imageDetailKakawinAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/sample_image_yadnya"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/overlayimage" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/backToKakawinAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/back" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="55dp"
                    android:paddingLeft="10dp">
                    <TextView
                        android:id="@+id/detailNamaKakawinAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Sekar Agung"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/detailKakawinAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis Sekar Agung"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="-30dp"
                android:layout_marginTop="-40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/deskripsiKakawinAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Atma Wedana adalah upacara yadnya yang bertujuan untuk menyucikan sang atma pitara setelah prosesi ngaben atau sawa wedana selesai yang dilaksanakan dengan upacara Nyekah atau Mamukur. Melalui upacara Atma Wedana ini yang diawali dengan dilaksanakannya upacara ngangget don bingin sebagai sarana ngawi sekah utawi puspa sarira sajeroning upacara mamukur sehingga nantinya roh atau atman leluhur kita itu menjadi Dewa Pitara untuk selanjutnya dapat menstanakannya di Kemulan."
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:textSize="15sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <Button
                            android:id="@+id/toEditKakawin"
                            android:backgroundTint="@color/blue_strap"
                            android:layout_width="165dp"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"
                            android:layout_height="60dp"
                            android:text="Edit Sekar Agung"/>
                        <Button
                            android:id="@+id/deleteKakawin"
                            android:backgroundTint="@color/red_danger"
                            android:layout_width="165dp"
                            android:textColor="@color/white"
                            android:layout_height="60dp"
                            android:text="Hapus Sekar Agung"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_lirik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lirik"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"/>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tambahLirikKakawin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="+ Tambah Lirik Sekar Agung"
                            android:textColor="@color/shimmer_secondary"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:layout_marginBottom="65dp"
                            android:layout_marginTop="15dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/baitKakawinListAdmin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/layout_list_detail_kakawin" />
                        </RelativeLayout>
                    </LinearLayout>
                    <Button
                        android:visibility="visible"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="35dp"
                        android:id="@+id/goToListLirikKakawin"
                        android:backgroundTint="@color/grey_200"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="60dp"
                        android:text="Atur Lirik Sekar Agung"/>
                    <LinearLayout
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Video"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"/>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tambahVideoKakawin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="+ Tambah Video Sekar Agung"
                            android:textColor="@color/shimmer_secondary"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:layout_marginBottom="65dp"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:id="@+id/lihatSemuavideokakawinAdmin"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua"
                            android:textColor="#4F88C7"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/nodatavideokakawinAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tidak ada data"
                        android:textColor="@color/shimmer_secondary"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_video_kakawinAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/layout_list_video_kakawin"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"/>
                    <Button
                        android:visibility="visible"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="35dp"
                        android:id="@+id/goToListVideoKakawin"
                        android:backgroundTint="@color/grey_200"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="60dp"
                        android:text="Atur Video Sekar Agung"/>
                    <LinearLayout
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Audio"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"/>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tambahAudioKakawin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="+ Tambah Audio Sekar Agung"
                            android:textColor="@color/shimmer_secondary"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:layout_marginBottom="65dp"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:id="@+id/lihatSemuaaudiokakawinAdmin"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua"
                            android:textColor="#4F88C7"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/nodataaudiokakawinAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tidak ada data"
                        android:textColor="@color/shimmer_secondary"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_audio_kakawinAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/layout_list_audio_kakawin"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"/>
                    <Button
                        android:visibility="visible"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="35dp"
                        android:id="@+id/goToListAudioKakawin"
                        android:backgroundTint="@color/grey_200"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="60dp"
                        android:text="Atur Audio Sekar Agung"/>
                    <LinearLayout
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yadnya Terkait"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"/>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tambahYadnyaKakawin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="+ Tambah Yadnya Sekar Agung"
                            android:textColor="@color/shimmer_secondary"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:layout_marginBottom="65dp"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:id="@+id/lihatSemuayadnyakakawinAdmin"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua"
                            android:textColor="#4F88C7"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/nodatayadnyakakawinAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tidak ada data"
                        android:textColor="@color/shimmer_secondary"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_yadnya_kakawinAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/layout_list_yadnya_kakawin"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"/>
                    <Button
                        android:visibility="visible"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="35dp"
                        android:id="@+id/goToListYadnyaKakawin"
                        android:backgroundTint="@color/grey_200"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="60dp"
                        android:text="Atur Yadnya Sekar Agung"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>