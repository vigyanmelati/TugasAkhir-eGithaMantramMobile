<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.adminmanager.DetailAdminActivity"
    android:orientation="vertical"
    android:padding="18dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail Ahli Dharmagita"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/tests"
                android:layout_marginTop="-14dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hapus data ahli Dharmagita"
                android:textColor="@color/grey_200"
                android:textSize="20sp"
                android:textStyle="bold"
                android:alpha="0.5"
                android:layout_marginBottom="25dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutNamaDetailAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Nama ahli Dharmagita">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/namaDetailAdmin"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutEmailDetailAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Email ahli Dharmagita">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailDetailAdmin"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File Bukti Ahli Dharmagita"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/toFileAhliDharmagita"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Lihat File"
                    android:layout_marginLeft="50dp"
                    android:backgroundTint="@color/grey_200"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
<!--                <Button-->
<!--                    android:layout_marginTop="30dp"-->
<!--                    android:id="@+id/toEditAdmin"-->
<!--                    android:backgroundTint="@color/blue_strap"-->
<!--                    android:layout_width="150dp"-->
<!--                    android:layout_marginRight="10dp"-->
<!--                    android:layout_height="60dp"-->
<!--                    android:text="Edit ahli Dharmagita"/>-->
                <Button
                    android:layout_marginTop="30dp"
                    android:id="@+id/deleteAdmin"
                    android:backgroundTint="@color/red_danger"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:text="Hapus ahli Dharmagita"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>