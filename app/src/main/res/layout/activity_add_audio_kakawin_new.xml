<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.kakawin.AddAudioKakawinNewActivity"
    android:orientation="vertical"
    android:padding="18dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Audio Sekar Agung Baru"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/tests"
                android:layout_marginTop="-14dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isi form dibawah dengan data yang sesuai"
                android:textColor="@color/grey_200"
                android:textSize="20sp"
                android:textStyle="bold"
                android:alpha="0.5"
                android:layout_marginBottom="25dp"/>
            <ImageView
                android:id="@+id/submitImgAudioKakawinUserNew"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/rectangle"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/selectImageAudioKakawinUserNew"
                    android:backgroundTint="@color/grey_200"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textSize="12sp"
                    android:text="Pilih Gambar"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutNamaAudioKakawinUserNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Masukan nama audio">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/namaAudioKakawinUserNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File Audio"/>
                <Button
                    android:id="@+id/selectAudioKakawinUserNew"
                    android:backgroundTint="@color/grey_200"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:layout_marginLeft="150dp"
                    android:text="Pilih"/>
            </LinearLayout>

            <TextView
                android:id="@+id/audio_file_text_add_kakawin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Bukti Ahli Dharmagita"
                android:visibility="gone"/>

            <Button
                android:layout_marginTop="30dp"
                android:id="@+id/recordAudioKakawinUserNew"
                android:backgroundTint="@color/red_danger"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Record Audio"/>
            <Button
                android:layout_marginTop="30dp"
                android:id="@+id/submitAudioKakawinUserNew"
                android:backgroundTint="@color/green_success"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Tambah Audio"/>
            <TextView
                android:id="@+id/cancelSubmitAddAudioKakawinUserNew"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Batal"
                android:textSize="15sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>